{
  "extends": "@tambo-ai/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react",
    "module": "ES6",
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["react"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "./dist", "./esm", "eslint.config.mjs"]
}
